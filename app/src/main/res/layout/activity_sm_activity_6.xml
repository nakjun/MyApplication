<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nj.myapplication.SM_Activity.SM_Activity_6"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view4">

        <android.support.v7.widget.Toolbar
            android:id="@+id/sm_6_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/sm_titlebar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 인지적 오류는 무엇일까요?"
        android:id="@+id/textView21"
        android:layout_marginTop="49dp"
        android:textSize="24dp"
        android:layout_below="@+id/view4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_button1"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@color/ripple_material_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_button2"
        android:layout_below="@+id/sm_6_button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/ripple_material_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_button3"
        android:layout_below="@+id/sm_6_button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:background="@color/ripple_material_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_button4"
        android:layout_below="@+id/sm_6_button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@color/ripple_material_dark" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_button5"
        android:layout_below="@+id/sm_6_button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@color/ripple_material_dark" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:layout_margin="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sm_6_next"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@color/transparent"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sm_6_next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:id="@+id/sm_6_notiText"
        android:textSize="24dp" />
</RelativeLayout>
