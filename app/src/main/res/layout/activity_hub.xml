<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nj.myapplication.HubActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="478호흡"
        android:id="@+id/btn_478"
        android:layout_alignBottom="@+id/btn_sm"
        android:layout_toRightOf="@+id/btn_yesno"
        android:layout_toEndOf="@+id/btn_yesno" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes No"
        android:id="@+id/btn_yesno"
        android:layout_below="@+id/btn_sm"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우울증 관리"
        android:id="@+id/btn_dp"
        android:layout_below="@+id/btn_yesno"
        android:layout_alignRight="@+id/btn_478"
        android:layout_alignEnd="@+id/btn_478" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btn_sm"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/btn_478"
        android:layout_toStartOf="@+id/btn_478" />



</RelativeLayout>
